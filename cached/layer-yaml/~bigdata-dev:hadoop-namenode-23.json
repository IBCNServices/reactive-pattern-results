{
    "options": {
        "basic": {
            "packages": [
                "git",
                "puppet-common",
                "unzip"
            ],
            "use_venv": false,
            "include_system_packages": false
        },
        "apache-bigtop-base": {
            "groups": [
                "mapred",
                "spark",
                "yarn"
            ],
            "users": {
                "mapred": {
                    "groups": [
                        "mapred",
                        "hadoop"
                    ]
                },
                "spark": {
                    "groups": [
                        "spark",
                        "hadoop"
                    ]
                },
                "ubuntu": {
                    "groups": [
                        "hadoop",
                        "mapred",
                        "spark"
                    ]
                },
                "yarn": {
                    "groups": [
                        "yarn",
                        "hadoop"
                    ]
                }
            },
            "ports": {
                "namenode": {
                    "port": 8020,
                    "exposed_on": "namenode"
                },
                "nn_webapp_http": {
                    "port": 50070,
                    "exposed_on": "namenode"
                }
            },
            "install_java": "openjdk-8-jdk",
            "bigtop_component_list": "hadoop",
            "bigtop_version": "1.2.0"
        },
        "hadoop-namenode": {}
    },
    "includes": [
        "layer:basic",
        "layer:metrics",
        "interface:java",
        "layer:apache-bigtop-base",
        "interface:dfs",
        "interface:dfs-slave",
        "interface:benchmark"
    ],
    "ignore": {
        "apache-bigtop-base": [
            "tests/unit",
            "tox_unit.ini",
            "unit_test_requirements.txt"
        ]
    },
    "repo": "https://github.com/apache/bigtop/tree/master/bigtop-packages/src/charm/hadoop/layer-hadoop-namenode",
    "is": "hadoop-namenode"
}