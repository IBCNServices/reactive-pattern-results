{
    "options": {
        "basic": {
            "packages": [
                "git",
                "puppet-common",
                "unzip",
                "bc",
                "libgfortran3"
            ],
            "use_venv": false,
            "include_system_packages": false
        },
        "hadoop-client": {
            "groups": [
                "hadoop"
            ],
            "dirs": {
                "spark_events": {
                    "path": "/var/log/spark/apps"
                }
            },
            "ports": {
                "spark-history": {
                    "port": 18080,
                    "exposed_on": "spark"
                },
                "spark-webui": {
                    "port": 8080,
                    "exposed_on": "spark"
                }
            },
            "packages": [],
            "users": {},
            "silent": false
        },
        "spark": {},
        "leadership": {},
        "apache-bigtop-base": {
            "install_java": "openjdk-8-jdk",
            "bigtop_version": "1.2.0",
            "bigtop_component_list": "hadoop"
        }
    },
    "includes": [
        "layer:basic",
        "layer:metrics",
        "interface:java",
        "interface:hadoop-plugin",
        "layer:apache-bigtop-base",
        "layer:hadoop-client",
        "layer:leadership",
        "interface:benchmark",
        "interface:spark",
        "interface:zookeeper",
        "interface:spark-quorum"
    ],
    "ignore": {
        "apache-bigtop-base": [
            "tests/unit",
            "tox_unit.ini",
            "unit_test_requirements.txt"
        ]
    },
    "repo": "https://github.com/apache/bigtop/tree/master/bigtop-packages/src/charm/spark/layer-spark",
    "is": "spark"
}